    </div>
  </section>

  <section id="build-your-chatbot" class="launch-your-chatbot">
    <h1 class="cta">Build your chatbot now!</h1>
    <%= link_to 'Register now', 'https://app.bothub.studio/register', :class => "btn btn-cta" %>
  </section>
</article>

<% content_for :body_js_code do %>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.11.0/highlight.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.11.0/languages/python.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.11.0/languages/python.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<%= javascript_include_tag "scrollspy" %>
<script>hljs.initHighlightingOnLoad();</script>
<script>
var elem = $('article.front-promo > #build-your-chatbot');
elem.on('scrollSpy:enter', function() {
  var id = $(this).attr('id');
  var path = window.location.pathname + '#' + id;
  ga('send', 'pageview', path);
});
elem.scrollSpy();
</script>
<% end %>
