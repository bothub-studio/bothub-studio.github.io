<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="application-name" content="BotHub.Studio">
    <meta name="description" content="<%= current_page.data.description || "Chatbot hosting for Developers. Container-based bot worker, storage, conversation management included all-in-one easy to use solution." %>">
    <meta name="keyword" content="chatbot,bothub,bothubstudio,serverless,hosting,chatbot hosting">
    <meta name="robots" content="index,follow,noodp">
    <meta name="googlebot" content="index,follow">
    <meta name="subject" content="Chatbot hosting for Developers. Container-based bot worker, storage, conversation management included all-in-one easy to use solution.">
    <meta name="rating" content="General">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.11.0/styles/monokai.min.css">
    <link rel="icon" type="image/png" href="/bothub-studio-icon.png?v=3">
    <meta property="og:title" content="<%= current_page.data.title || "BotHub.Studio: Chatbot hosting service for Developers" %>">
    <meta property="og:image" content="<% if current_page.data.cover_image %><%= "https://bothub.studio" + current_page.data.cover_image %><% else %>https://bothub.studio/images/bothub-studio-logo.png<% end %>">
    <meta property="og:image:width" content="<%= current_page.data.cover_image_width || "376" %>">
    <meta property="og:image:height" content="<%= current_page.data.cover_image_height || "376" %>">
    <meta property="og:description" content="<%= current_page.data.description || "Chatbot hosting for Developers. Container-based bot worker, storage, conversation management included all-in-one easy to use solution." %>">
    <meta property="og:type" content="article">
    <meta property="fb:app_id" content="1335312283250354">

    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "BotHub.Studio: Chatbot hosting service for Developers" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= stylesheet_link_tag "highlight" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <div id="app">
      <header class="<% if current_page.data.isFront %>front<% end %> site">
        <%= partial "header" %>
      </header>
      <main class="<% if current_page.data.isFront %>front<% end %> contents">
        <%= yield %>
      </main>
      <footer class="<% if current_page.data.isFront %>front<% end %> site">
        <%= partial "footer" %>
      </footer>
    </div>
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                             m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('require', 'linker');
    ga('linker:autoLink', ['bothub.studio', 'www.bothub.studio', 'app.bothub.studio']);
    ga('create', 'UA-97211180-1', 'auto', { allowLinker: true });
    ga('send', 'pageview');
    </script>
    <% if content_for?(:body_js_code) %>
      <%= yield_content :body_js_code %>
    <% end %>
  </body>
</html>
